#!/bin/bash

choice=4

function choose {
echo "1. Process List"
echo "2. Kill a process by ID"
echo "3. Exit"
echo -n "Select a number [1 ... 3] "
}

choose

while [ $choice -eq 4 ]; do

read choice

if [ $choice -eq 1 ]; then
	ps -ef
	choose
	choice=4
else
	if [ $choice -eq 2 ]; then
		echo "Enter Process ID: "
		read PID
		kill -9 $PID
		choose
		choice=4
	else
		if [ $choice -eq 3 ]; then
			exit 1
		else
			echo "Please choose between 1-3!"
			choose
			choice=4
		fi
	fi
fi
done
