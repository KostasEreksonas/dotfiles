#!/bin/bash

for f in $(ls tmp/); do
	echo $f
done
DIR=/home/kostas/bin/tmp
for f in $(ls $DIR); do
	if [[ file ]]; then
		read -p "File $f exists. Do you want to delete? [y/n] " delete
		if [[ $delete == [yY] ]]; then
			cd $DIR
			rm "$f" && echo "File deleted."
			else
				exit 1
		fi
		else
			echo "File $f does not exist."
	fi
done
exit 1
echo $PWD
echo $?
