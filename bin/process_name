#!/bin/bash
function search {
	echo "What process you want to check?"
	read name
	count=0
}
search
while [ $count -eq 0 ]; do
	echo "Process list:"
	echo " "
	ps -ef | grep $name
	echo ""
	read -p "Do you want to search for another one? [y/n] " choice
	if [[ $choice == [nN] ]]; then
		exit 1
	else
		count=1
		search
	fi
done
