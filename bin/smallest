#!/bin/sh

read -p "First number: " num1
read -p "Second number: " num2
read -p "Third number: " num3

if [ $num1 -lt $num2 ] && [ $num1 -lt $num3 ]
then
	printf "First number is the smallest: $num1\n"
fi

if [ $num2 -lt $num1 ] && [ $num2 -lt $num3 ]
then
	printf "Second number is the smallest: $num2\n"
fi

if [ $num3 -lt $num1 ] && [ $num3 -lt $num2 ]
then
	printf "Third number is the smallest: $num3\n"
fi
