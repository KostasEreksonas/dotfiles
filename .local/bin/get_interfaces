#!/bin/bash

# Get interface names
names="$(ip a | grep "^[0-9]" | cut -d ":" -f 2 | tr -d " " | sed 's/$'\n'/ /g')"

IFS_BAK="${IFS}"
IFS=$'\n'
names=($names)
IFS="${IFS_BAK}"

for interface in "${names[@]}"; do
	ips="$(ip a | grep "${interface}" | grep inet | cut -d " " -f 6)"
	IFS=$'\n'
	ips=($ips)
	IFS="${IFS_BAK}"
	if [[ ${#ips[@]} -eq 0 ]]; then
		printf "${interface} has no ip address\n"
	else
		for ip in "${ips[@]}"; do
			printf "${interface}: ${ip}\n"
		done
	fi
done
